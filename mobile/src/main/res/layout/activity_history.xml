<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".History">

    <LinearLayout
        android:id="@+id/status_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFC107"
        android:gravity="start|fill_vertical"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <Button
            android:id="@+id/back_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/actionModeCloseDrawable"
            android:backgroundTint="#FFC107" />

    </LinearLayout>

    <TextView
        android:id="@+id/history_text"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-black"
        android:text="ประวัติการซื้อ"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="@+id/status_top"
        app:layout_constraintEnd_toEndOf="@+id/status_top"
        app:layout_constraintStart_toStartOf="@+id/status_top"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="393dp"
        android:layout_height="197dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.347"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/status_top">

        <LinearLayout
            android:layout_width="405dp"
            android:layout_height="58dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:background="#000000"
                android:hint="Select Date"
                android:lineSpacingExtra="8sp"
                android:text="Select Date"
                android:textAlignment="center"
                android:textColor="#FCFAFA"
                android:textDirection="rtl"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/add_lottery"
                style="@style/Widget.AppCompat.AutoCompleteTextView"
                android:layout_width="323dp"
                android:layout_height="61dp"
                android:backgroundTint="#00131212"
                android:ems="10"
                android:fadingEdge="horizontal|vertical"
                android:hint="กรุณาใส่ตัวเลข 6 หลัก"
                android:inputType="number"
                android:lineSpacingExtra="10sp"
                android:typeface="normal" />

            <Button
                android:id="@+id/confirm_bt"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="#0E0D0D"
                android:backgroundTint="#0E0D0D"
                android:text="ยืนยัน"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/manage_money_bt"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#612196F3"
                android:text="จัดการการเงิน"
                android:textAlignment="textStart"
                android:textSize="18sp" />

            <Button
                android:id="@+id/clear_bt"
                android:layout_width="wrap_content"
                android:layout_height="53dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="#F44336"
                android:text="CLEAR"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout2"
        android:layout_width="395dp"
        android:layout_height="456dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LinearLayout">

        <ListView
            style="@android:style/Widget.DeviceDefault.ExpandableListView"
            android:layout_width="match_parent"
            android:layout_height="467dp"
            android:background="#FF9800"
            android:cacheColorHint="#FF0A0A" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>