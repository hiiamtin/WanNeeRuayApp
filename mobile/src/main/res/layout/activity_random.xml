<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Statistic">

    <LinearLayout
        android:id="@+id/status_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFC107"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

    </LinearLayout>

    <TextView
        android:id="@+id/status_top_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-black"
        android:text="เขย่าเลข"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="@+id/status_top"
        app:layout_constraintEnd_toEndOf="@+id/status_top"
        app:layout_constraintStart_toStartOf="@+id/status_top"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/actionModeCloseDrawable"
        android:backgroundTint="#FFC107"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="2dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="184dp"
        android:layout_height="64dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="515dp"
        android:layout_marginEnd="112dp"
        android:backgroundTint="#FF9800"
        android:text="มาเขย่าหาเลขกัน"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/status_top" />

    <TextView
        android:id="@+id/8"
        android:layout_width="127dp"
        android:layout_height="120dp"
        android:layout_marginTop="332dp"
        android:background="@android:drawable/presence_online"
        android:backgroundTint="@android:color/holo_orange_light"
        android:text="8"
        android:textAlignment="center"
        android:textSize="80sp"
        app:layout_constraintTop_toBottomOf="@+id/status_top"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/7"
        android:layout_width="127dp"
        android:layout_height="120dp"
        android:layout_marginEnd="142dp"
        android:background="@android:drawable/presence_online"
        android:backgroundTint="@android:color/holo_orange_light"
        android:text="7"
        android:textAlignment="center"
        android:textSize="80sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/8"
        tools:layout_editor_absoluteY="382dp" />

    <TextView
        android:id="@+id/3"
        android:layout_width="127dp"
        android:layout_height="120dp"
        android:background="@android:drawable/presence_online"
        android:backgroundTint="@android:color/holo_orange_light"
        android:text="3"
        android:textAlignment="center"
        android:textSize="80sp"
        tools:layout_editor_absoluteX="270dp"
        tools:layout_editor_absoluteY="382dp" />

    <TextView
        android:id="@+id/9"
        android:layout_width="127dp"
        android:layout_height="120dp"
        android:background="@android:drawable/presence_online"
        android:backgroundTint="@android:color/holo_red_dark"
        android:text="9"
        android:textAlignment="center"
        android:textSize="80sp"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="155dp" />

    <TextView
        android:id="@+id/4"
        android:layout_width="127dp"
        android:layout_height="120dp"
        android:background="@android:drawable/presence_online"
        android:backgroundTint="@android:color/holo_red_dark"
        android:text="4"
        android:textAlignment="center"
        android:textSize="80sp"
        tools:layout_editor_absoluteX="199dp"
        tools:layout_editor_absoluteY="155dp" />

    <TextView
        android:id="@+id/num2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="133dp"
        android:layout_marginEnd="133dp"
        android:text="เลขเด็ดนำโชค"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="102dp" />

    <TextView
        android:id="@+id/num3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="เลขเด็ดนำพารวย"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="325dp" />

</android.support.constraint.ConstraintLayout>